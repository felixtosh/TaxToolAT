rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Files uploaded by users (invoices, receipts, etc.)
    // Path: files/{userId}/{filename}
    match /files/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId
        && request.resource.size < 25 * 1024 * 1024; // 25MB limit
    }

    // Legacy receipts path
    // Path: receipts/{userId}/{transactionId}/{filename}
    match /receipts/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId
        && request.resource.size < 25 * 1024 * 1024; // 25MB limit
    }

    // CSV imports
    // Path: csvImports/{userId}/{importJobId}.csv
    match /csvImports/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024; // 10MB limit for CSVs
    }

    // Thumbnails (generated by Cloud Functions, readable by owner)
    // Path: thumbnails/{userId}/{filename}
    match /thumbnails/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; // Cloud Functions only
    }
  }
}
