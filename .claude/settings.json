{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-transaction-changes.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/check-operations-pattern.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/check-cloud-function-pattern.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/build-functions-on-change.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/check-privacy-policy.sh"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-checkpoint-on-complete.sh"
          }
        ]
      }
    ]
  }
}
